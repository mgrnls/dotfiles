# Turn off the welcome message
startup_message off

# Disable visual bell
vbell off

# Set scrollback buffer to 10000
defscrollback 10000

# Customize the status line so that it shows the windows that you have up.
hardstatus alwayslastline
hardstatus string '%{= WK}%-w%{= gb} %n %t %{= WK}%+w'

# Stop linux remaining in the scrollback.
altscreen on
